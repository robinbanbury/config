# Lives in ~/.gitconfig

[user]
    name = Robin Banbury
    email = something@test.com
[alias]
    gconfig = config --global
    ls = log --oneline
    ll = log --oneline --decorate --all --graph
    pushfwl = push --force-with-lease --force-if-includes  # makes force-pushing to shared repos safer
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed = "!git ls-files -v | grep ^h | cut -c 3-"
    bb = !better-branch.sh  # https://gist.github.com/schacon/e9e743dee2e92db9a464619b99e94eff
[color]
    ui = true
[help]
    autocorrect=1
[pull]
    ff = only
